{{>_partials/site-header}}

<div style="text-align:center">
    <h1><i class="fas fa-lock"></i> Login to Continue</h1>
    <p>Please login to continue</p>
</div>

{{>_partials/flash-message}}

<div class="login-form">

    <form action="/login" method="post" id="login-form">

    <input type="radio" class="login-button" id="login" value="login" name="buttons" checked>
    <label for="login">Login</label>

    <input type="radio" class="signup-button" id="signup" value="register" name="buttons">
    <label for="signup">Signup</label>




        <div class="form-box">

        <div class="signup">

            <label for="fname">First Name</label>
            <input type="text" name="fname" value="" required>

            <label for="lname">Last Name</label>
            <input type="text" name="lname" required>

        </div>

        <div class="login">

            <label for="email">Email</label>
            <input type="email" name="email" value="" required>

            <label for="password">Password</label>
            <input type="password" name="password" required>

        </div>

        <p><input type="submit" value="Login"></p>

        </div>

    </form>

</div>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
<script type="text/javascript">
    $(document).ready(function(){

        // VALIDATE THE FORM - NOT WORRYING ABOUT AJAX WITH THIS YET
        // TODO: ADD AJAX CHECK TO SEE IF USERNAME EXISTS
        $("#login-form").validate({
            rules: {
                fname: {
                    required: '#signup:checked'
                },
                lname: {
                    required: '#signup:checked'
                },
                email: {
                    required: true,
                    email: true
                },
                password: {
                    required: true
                }
            }
        });

    });
</script>
{{>_partials/site-footer}}
